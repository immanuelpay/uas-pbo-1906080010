@model PBO_UAS.Entities.Mahasiswa

@{
    ViewBag.Title = "Tambah Mahasiswa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tambah</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
